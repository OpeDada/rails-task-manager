<div class="container mt-2 mx-2" >

  <div class="d-flex justify-content-between">
    <h1><%= @task.title %></h1>

    <div class="btn btn-primary d-flex align-items-center mb-2">
      <%= link_to 'Edit this task', edit_task_path %>
    </div>
  </div>

  <div class="card bg-light mb-2">
    <div class="card-body mx-1 pb-1">
      <p><%= @task.details %></p>
    </div>
  </div>
  <p><%= @completed %></p>
  <%= link_to 'Back to list', tasks_path %>


</div>
